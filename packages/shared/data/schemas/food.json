{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "properties": {
    "CARROT": {
      "$ref": "#/definitions/food"
    },
    "CHORUS_FRUIT": {
      "$ref": "#/definitions/food"
    },
    "WHEAT": {
      "$ref": "#/definitions/food"
    },
    "SUGAR_CANE": {
      "$ref": "#/definitions/food"
    }
  },
  "required": ["CARROT", "CHORUS_FRUIT", "WHEAT", "SUGAR_CANE"],
  "definitions": {
    "food": {
      "type": "object",
      "properties": {
        "price": {
          "type": "number",
          "minimum": 0.1
        },
        "probability": {
          "type": "integer",
          "minimum": 0
        },
        "maxItems": {
          "type": "integer",
          "minimum": 1
        },
        "rarityOverwrites": {
          "propertyNames": {
            "$ref": "../enums/rarities.json"
          },
          "additionalProperties": {
            "type": "object",
            "properties": {
              "price": {
                "type": "number",
                "minimum": 0.1
              },
              "probability": {
                "type": "integer",
                "minimum": 0
              },
              "maxItems": {
                "type": "integer",
                "minimum": 1
              }
            },
            "required": ["price", "probability", "maxItems"]
          }
        }
      },
      "required": ["price", "probability", "rarityOverwrites", "maxItems"]
    }
  }
}
