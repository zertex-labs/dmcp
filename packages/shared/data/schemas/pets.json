{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "properties": {
    "COW": {
      "$ref": "#/definitions/pet"
    },
    "FOX": {
      "$ref": "#/definitions/pet"
    }
  },
  "required": ["COW", "FOX"],
  "definitions": {
    "pet": {
      "type": "object",
      "properties": {
        "maxLevel": {
          "type": "integer",
          "minimum": 2
        },
        "rarity": {
          "$ref": "../enums/rarities.json"
        },
        "perks": {
          "type": "array",
          "items": {
            "type": "string",
            "$ref": "../enums/stats.json"
          }
        }
      },
      "required": ["maxLevel", "rarity", "perks"]
    }
  }
}
